package components

import "github.com/juanjuanzero/building-goth-v2/src/services/todo"

templ ToDoTable(items map[string]todo.ToDoItem) {
	<table>
		<thead>
			<tr>
				<th>Task </th>
				<th>Due </th>
				<th>Complete </th>
			</tr>
		</thead>
		<tbody>
			for _, item := range items {
				<tr>
					<td>{ item.Task }</td>
					<td>{ item.Due.String() }</td>
				</tr>
			}
		</tbody>
	</table>
}
